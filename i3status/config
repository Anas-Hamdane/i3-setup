# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "cpu_temperature 0"
order += "wireless _first_"
# order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality), Hack Me IP: %ip"
        format_down = "W: down"
}

# ethernet _first_ {
#         format_up = "E: Hack Me: %ip (%speed)"
#         format_down = "E: down"
# }

battery all {
        format = "Breath: %status %percentage"
        last_full_capacity = true
}

disk "/" {
        format = "Good boy: %avail"
}

cpu_temperature 0 {
        format = "Brain: %degrees °C"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
